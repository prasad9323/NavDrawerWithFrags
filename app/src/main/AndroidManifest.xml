<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shoppingapp">

    <application
        android:name="com.shoppingapp.Master"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.shoppingapp.SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:theme="@style/LoginTheme" />
        <activity
            android:name="com.shoppingapp.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.shoppingapp.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/LoginTheme"
            android:windowSoftInputMode="stateHidden|adjustResize|adjustPan" />
        <activity
            android:name="com.shoppingapp.SplashScreen"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>